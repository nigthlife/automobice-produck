<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.wlp.dao.PartsInfoDao">
	
	<insert id="inPartsInfo" parameterType="PartsInfo">
		insert into partsinfo (partsName,price,`count`)
		values (#{partsName},#{price},#{count})
	</insert>
	
	<delete id="dePartsInfo">
		delete from partsinfo where partsId = #{partsId}
	</delete>
	
	<update id="upPartsInfo" parameterType="PartsInfo">
		update partsinfo
		<set>
			partsName = #{partsName},
			price = #{price},
			count = #{count}
		</set>
		<where>
			partsId = #{partsId}
		</where>
	</update>
	
	<select id="selectAll" resultType="com.wlp.bean.PartsInfo">
		select partsId,partsName,price,`count` from partsinfo
	</select>
	
	<select id="getMax" resultType="java.lang.Integer">
		select max(partsId) from partsinfo
	</select>
</mapper>
